<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.lt.blog.mapper.UserCollectMapper">
		<insert id="addCollect" parameterType="UserCollect">
			insert into usercollect (userid,articleid,liketime) values(#{userid},#{articleid},#{liketime})
		</insert>
	    <delete id="cancelCollect" parameterType="UserCollect">
	    	delete from usercollect where userid = #{userid} and articleid=#{articleid}
	    </delete>
	    <select id="collect" parameterType="UserCollect">
	    	select * from usercollect where userid = #{userid} and articleid=#{articleid}
	    </select>
	</mapper>